        box-shadow: 0px 10px 31px -3px rgba(0,0,0,0.3);
        border-radius: 30px;
        border-bottom: 1px solid #000000;
        padding: 20px;
        margin: 30px;
    }

    .mainFooter{
        background-color: #add8e6;
        margin-top:50px;
        display: flex;
        color: #1b2e35;
        justify-content: space-between;
        border-radius:5px;
        padding:10px;
    }

    .mainFooter img{
        width:10vw;
    }
    .card-text{
        text-align:center;
        font-size:1rem;
        font-weight:bold;
    }

    #firstCarousel img {
        height: 50vh; /* Full viewport height */
        object-fit: contain; /* Ensure images maintain aspect ratio and fill the container */
    }

    .carousel-inner h5{
        color:black;
        font-weight:bold;
    }

    #carouselExampleCaptions{
        margin-bottom: 30px;
    }

    .text-part {
        
        padding: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .image-part img {
        width: 100%;
        height: auto;
        object-fit: cover;
    }
    @@media screen and (max-width:767px) {
        .leftPart {
            width: 100%;
        }

        .empoweringBusinesses {
            flex-wrap: wrap;
        }

            .empoweringBusinesses img {
                width: 70vw;
            }

        .setsUsApart {
            flex-direction: column;
        }

        .counter{
            font-size: 2rem;
        }

        .counter-container span {
            font-size: 0.8rem;
        }
    }
</style>

