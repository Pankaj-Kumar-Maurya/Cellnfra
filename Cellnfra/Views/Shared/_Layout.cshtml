<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cellnfra</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cellnfra.styles.css" asp-append-version="true" />
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <style>
        header{
            position:sticky;
            top:0px;
            z-index:1100;
        }

        .mainFooter {
            background-color: #add8e6;
            margin-top: 50px;
            display: flex;
            color: #1b2e35;
            justify-content: space-between;
            border-radius: 5px;
            padding: 10px;
        }

            .mainFooter img {
                width: 10vw;
            }
    </style>
</head>
<body>
    <header >
        <nav style="background-color:lightblue; color:white;" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/assets/cellnfraLogo.png" style="width:7vw;"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="WhyUs">Why Us</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Service
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="~/Home/ElectronicsRepairs">Electronics Repairs</a></li>
                               @*  <li><a class="dropdown-item" href="#">Assembly & Test</a></li>
                                <li><a class="dropdown-item" href="#">Electronic Refurbish</a></li>
                                <li><a class="dropdown-item" href="#">Electronics Parts Sales</a></li>
                                <li><a class="dropdown-item" href="#">Reverse Logistics & Supply Chain</a></li>
                                <li><a class="dropdown-item" href="#">Bespoke Solutions</a></li> *@
                               
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Markets
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#">Telecom</a></li>
                               @*  <li><a class="dropdown-item" href="#">CPE Data Network</a></li>
                                <li><a class="dropdown-item" href="#">Industrial Electronics</a></li>
                                <li><a class="dropdown-item" href="#">Power & Energy</a></li>
                                <li><a class="dropdown-item" href="#">Optical Networks</a></li>     *@                            
                            </ul>
                        </li>                       
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="EWasteManagement">E-Waste Management</a>
                        </li>
                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" >
            @RenderBody()
        </main>
    </div>
    <div class="mainFooter">
        <div>
            <img src="/assets/cellnfraLogo.png" />
        </div>
        <div>
            <h3>Markets</h3>
            <h6> Telecom</h6>
            <h6> Optical Networks</h6>
            <h6> Industrial Electronics</h6>
            <h6> CPE Data Networks</h6>
        </div>
        <div>
            <h4>About Company</h4>
            <h6>
                About Company
            </h6>
            <h6> Contact Us</h6>
            <h6> Privacy policy</h6>
            <h6>  Mission & Vision</h6>
            <h6>  Terms & Conditions</h6>
        </div>
        <div>
            <h4>Life Cycles Services</h4>
            <h6>
                Electronics Repairs
            </h6>
            <h6>  Assembly & Retrofitting</h6>
            <h6> Refurbished Electronics</h6>
            <h6> Reverse logistics and supply chain</h6>
            <h6>Bespoke Solutions</h6>

        </div>
    </div>
    <footer style="text-align:center;" class="border-top footer text-dark">
        <div class="container">
            &copy; 2025 - Cellnfra - All Rights Reserved. @* <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
